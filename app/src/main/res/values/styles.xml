<resources>
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicator</item>
        <item name="itemRippleColor">@color/nav_item_ripple</item>
        <item name="itemIconTint">@color/nav_icon_tint</item>
        <item name="itemTextColor">@color/nav_text_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Material3.LabelSmall</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Material3.LabelSmall</item>
    </style>

    <style name="CustomActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/work_day_green_container</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/card_background_color</item>
    </style>

    <style name="Widget.App.TextInputLayout.ExposedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="endIconTint">@color/text_secondary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/card_background_color</item>
    </style>
</resources>
