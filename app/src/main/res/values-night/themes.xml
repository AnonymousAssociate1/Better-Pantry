<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BetterPantry" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/work_day_green</item>
        <item name="colorPrimaryVariant">@color/work_day_green</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Dark mode: dark gray background (matches content) -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <item name="android:popupMenuStyle">@style/RoundedPopupMenu</item>
        <item name="popupMenuStyle">@style/RoundedPopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/MenuDividerStyle</item>
    </style>

    <style name="Theme.BetterPantry.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="RoundedPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <style name="MenuDividerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/text_secondary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
